                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:id="@+id/rl_insured"
                    android:layout_below="@id/iv_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
