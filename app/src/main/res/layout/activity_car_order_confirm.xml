                        android:layout_marginBottom="@dimen/y36"
                        android:layout_marginRight="@dimen/x36"
                        android:background="@drawable/shape_white_a6">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/agree_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y180"
                android:background="@color/A7"
                android:paddingLeft="@dimen/x36"
                android:paddingRight="@dimen/x36"
                android:paddingTop="@dimen/y42">

                <CheckBox
                    android:id="@+id/ck_agree"
                    style="@style/mycheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <TextView
                    android:id="@+id/tv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ck_agree"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/ck_agree"
                    android:lineSpacingMultiplier="1.2"
                    android:text="@string/agreement2"
                    android:textAppearance="@style/TextAppear.Theme.A3_Size11" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y118"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextAppear.Theme.A2_Size21"
            android:textStyle="bold"
            tools:text="￥116.00" />

        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
