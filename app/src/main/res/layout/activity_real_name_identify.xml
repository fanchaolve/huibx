<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_real_name_identify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A7"
    tools:context="com.bb.hbx.activitiy.RealNameIdentifyActivity">

    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:id="@+id/back_iv"
                android:src="@drawable/fanhui"
                android:scaleType="centerCrop"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="实名认证"
            android:textSize="17sp"
            android:textColor="@color/A1"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@id/topbar_layout"
        android:background="@color/colorDivider">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请拍摄您的身份证正反面,用于实名认证"
                android:textSize="12sp"
                android:textColor="@color/A4"
                android:paddingTop="22dp"
                android:paddingBottom="22dp"
                android:gravity="center_horizontal"/>
            <RelativeLayout
                android:id="@+id/front_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_tv">
                <ImageView
                    android:id="@+id/front_iv"
                    android:src="@drawable/shenfenzhengzhengmian"
                    android:scaleType="centerCrop"
                    android:layout_width="280dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/frontFlag_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/xiangji_shenfenzheng"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/reverse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/reverse_iv"
                    android:src="@drawable/shenfenzhengfanmian"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="9dp"
                    android:layout_width="280dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/reverseFlag_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/xiangji_shenfenzheng"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/next_tv"
                android:background="@drawable/shape_btn_a1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="31dp"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
