<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x658"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_white_a6"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x26"
        android:layout_marginTop="@dimen/y26"
        android:src="@drawable/guanbi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y14"
        android:text="@string/pay"
        android:textAppearance="@style/TextAppear.Theme.A3_Size12" />

    <EditText
        android:id="@+id/et_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x46"
        android:layout_marginRight="@dimen/x46"
        android:layout_marginTop="@dimen/y70"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="@string/password2"
        android:singleLine="true"
        android:textAppearance="@style/TextAppear.Theme.A3_Size18"
        android:textColorHint="@color/A6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x46"
        android:layout_marginRight="@dimen/x46"
        android:layout_marginTop="@dimen/y26">

        <include layout="@layout/line_e" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forgetpsd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x46"
        android:layout_marginTop="@dimen/y36"
        android:padding="4dp"
        android:text="@string/losspsw2"
        android:textAppearance="@style/TextAppear.Theme.A1_Size12" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_marginTop="@dimen/y42"
        android:layout_marginBottom="@dimen/y56"
        android:background="@drawable/shape_btn_a1"
        android:gravity="center"
        android:text="чбошод"
        android:textAppearance="@style/TextAppear.Theme.white_Size18" />
</LinearLayout>
