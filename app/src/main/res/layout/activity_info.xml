    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:id="@+id/back_iv"
                android:src="@drawable/fanhui"
                android:scaleType="centerCrop"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="消息中心"
            android:textSize="17sp"
            android:textColor="@color/A1"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/editAll_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="编辑全部"
            android:textColor="@color/A1"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_layout"
        android:paddingTop="2dp"
        android:paddingBottom="18dp"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:id="@+id/myInfo_tv"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:text="我的消息"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/shape_select_left_custom"/>
        <TextView
            android:id="@+id/systemInfo_tv"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:text="系统消息"
            android:textSize="17sp"
            android:textColor="@color/A1"
            android:gravity="center"
            android:layout_toRightOf="@id/myInfo_tv"
            android:background="@drawable/shape_unselect_right_custom" />
        <TextView
            android:id="@+id/myInfoCount_tv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_z56"
            android:gravity="center"
            android:textAppearance="@style/TextAppear.Theme.Z55_Size8"
            android:text="0"
            android:layout_toLeftOf="@id/systemInfo_tv"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/systemInfoCount_tv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_z56"
            android:gravity="center"
            android:textAppearance="@style/TextAppear.Theme.Z55_Size8"
            android:text="0"
            android:layout_toRightOf="@id/myInfo_tv"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@id/select_layout"></RelativeLayout>
</RelativeLayout>
