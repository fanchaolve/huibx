<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A7"
    tools:context="com.bb.hbx.activitiy.CustomerManagerActivity">

    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:id="@+id/back_iv"
                android:src="@drawable/fanhui"
                android:scaleType="centerCrop"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/customers_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="客户管理"
                android:textSize="17sp"
                android:textColor="@color/A1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/reminding_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="事件提醒"
                android:textSize="17sp"
                android:textColor="@color/A1"
                android:gravity="center"
                android:layout_toRightOf="@id/customers_tv"
                android:layout_marginLeft="6dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/search_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/sousuo_shancgheng"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_layout"
        android:layout_marginTop="13dp"
        android:background="@color/white"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">
        <TextView
            android:id="@+id/fromContacts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通讯录导入"
            android:textColor="@color/A3"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:id="@+id/fromManual_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手动添加"
            android:textColor="@color/A3"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_below="@id/choice_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></RelativeLayout>
</RelativeLayout>
