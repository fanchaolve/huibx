<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_smss_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="18dp"
    android:paddingLeft="18dp"
    tools:context=".activitiy.login.LoginActivity">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/fanhui"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:onClick="backMethod" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_iv"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logo_layout">
                <ImageView
                    android:id="@+id/logoIcon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logo"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:id="@+id/logoText_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/huibaoxian"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/logoIcon_iv"
                    android:layout_marginTop="11dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="32dp"
                android:layout_below="@id/logo_layout"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">
                <ImageView
                    android:id="@+id/phone_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/iphone"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"/>
                <com.bb.hbx.widget.LoginTelEdit
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:edit_endDrawable="@mipmap/ic_launcher"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/phone_iv"
                    android:layout_marginLeft="11dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pwd_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_alpha_a10"
                android:layout_below="@id/phone_layout"
                android:paddingLeft="13dp"
                android:paddingRight="13dp">
                <ImageView
                    android:id="@+id/pwd_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/yanzhengma"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入验证码"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pwd_iv"
                    android:layout_marginLeft="11dp"
                    android:inputType="numberPassword"/>
                <TextView
                    android:id="@+id/tv_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="获取验证码" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/agree_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/agree_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/agree_select"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已阅读并同意" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agreementProtocal"
                    android:textColor="@color/A1"/>
            </LinearLayout>

            <Button
                android:id="@+id/login_bt"
                android:layout_marginTop="@dimen/y50"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:gravity="center"
                android:background="@drawable/shape_b"
                android:text="@string/login" />

            <RelativeLayout
                android:layout_marginTop="@dimen/y30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/y20"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/A6"/>

                <TextView
                    android:padding="5dp"
                    android:layout_marginRight="@dimen/x50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_line"
                    android:text="@string/passwordlogin"
                    android:id="@+id/tv_passwordlogin" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_regist"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_line"
                    android:text="@string/iregist"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/divide_layout">
                    <TextView
                        android:id="@+id/another_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他登录方式"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/A6"
                        android:layout_toLeftOf="@id/another_tv"
                        android:layout_marginRight="12dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/A6"
                        android:layout_toRightOf="@id/another_tv"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/wechat_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/weixinlogo"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
