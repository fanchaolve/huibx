<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/msgdetails"
            android:textAppearance="@style/TextAppear.Theme.A1_Size17" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/x36"
            android:src="@drawable/fanhui" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="人保百万身价推广费"
                    android:textColor="@color/A3"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:layout_marginTop="13dp"
                    android:text="2017-02-21"
                    android:textColor="@color/A4"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/A6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="21dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动时间: "
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_activitytime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="即日~3月31日"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品卖点:"
                        android:textColor="@color/A4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="1.卡京东方解决了开过了肯德基龙卷风到家了发垃圾垃圾了深刻的接口里发了肯德基案例集拉拉手家乐福到家了打卡机了肯德基法规"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="2.开什么玩笑"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_product_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="3.弄啥嘞！"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品保障:"
                        android:textColor="@color/A4"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_guarantee_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="1.骗你个小狗、、、、、、"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_guarantee_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="2.骗你个小狗、、、、、、"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_guarantee_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="3.骗你个小狗、、、、、、"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_guarantee_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="21dp"
                        android:layout_marginTop="13dp"
                        android:text="4.骗你个小狗、、、、、、"
                        android:textColor="@color/A3"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>