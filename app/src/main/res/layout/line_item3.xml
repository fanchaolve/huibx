<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y112"
    >


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x36"
        android:textAppearance="@style/TextAppear.Theme.A3_Size14" />

    <CheckBox
        android:id="@+id/cb_ceter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:button="@null"
        android:checked="false"
        android:drawableLeft="@drawable/select"
        android:text="@string/bjmp"
        android:drawablePadding="10dp"
        android:textColor="@color/A4"
        android:textSize="13sp" />


    <ImageView
        android:id="@+id/iv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:layout_marginRight="@dimen/x36"
        android:src="@drawable/xialaicon" />


    <TextView
        android:id="@+id/tv_comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_last"
        android:text=""

        />

    <LinearLayout
        android:id="@+id/lin_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x36">

        <include layout="@layout/line_e" />
    </LinearLayout>

</RelativeLayout>

