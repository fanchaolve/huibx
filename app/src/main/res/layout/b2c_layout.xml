<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:background="@color/A1">

    <TextView
        android:id="@+id/close_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"/>
    <TextView
        android:id="@+id/translate_tv"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:text="马上升级"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_z44"/>
    <TextView
        android:id="@+id/titleHead_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成为签约代理人"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您有升级资格"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleHead_tv"
        android:layout_marginTop="7dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/b2c_zhanshi"
        android:scaleType="centerCrop"
        android:layout_below="@id/content_tv"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"/>
</RelativeLayout>