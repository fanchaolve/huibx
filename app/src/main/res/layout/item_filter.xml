<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y26"
        android:background="@color/A7">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/y16"
        android:paddingLeft="@dimen/x36"
        android:paddingRight="@dimen/x36"
        android:paddingTop="@dimen/y30">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保险类型"
            android:textAppearance="@style/TextAppear.Theme.A4_Size12" />

        <TextView
            android:id="@+id/tv_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x14"
            android:text="查看更多"
            android:textAppearance="@style/TextAppear.Theme.A4_Size12"


            />

        <ImageView
            android:id="@+id/iv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/xialaicon" />

    </LinearLayout>

</LinearLayout>