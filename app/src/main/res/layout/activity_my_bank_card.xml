<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_bank_card"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/A7"
    tools:context="com.bb.hbx.activitiy.MyBankCardActivity">

    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:id="@+id/back_iv"
                android:src="@drawable/fanhui"
                android:scaleType="centerCrop"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的银行卡"
            android:textSize="17sp"
            android:textColor="@color/A1"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_layout"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/A1">
        <TextView
            android:id="@+id/cardName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国工商银行"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="33dp"/>
        <TextView
            android:id="@+id/cardType_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="储蓄卡"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_below="@id/cardName_tv"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/bankstatus_tv"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/shape_bwhite_a1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="解绑" />
        
        <ImageView
            android:id="@+id/bankLogo_iv"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/gongshangyinhang"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@id/cardType_tv"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="28dp">
            <ImageView
                android:id="@+id/point_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yinhangkahao_bai"
                android:scaleType="centerCrop"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/cardNo_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_toRightOf="@id/point_iv"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
