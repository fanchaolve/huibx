<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fix_pay_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A7"
    tools:context="com.bb.hbx.activitiy.FixPayPwdActivity">

    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fanhui" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="设置支付密码"
            android:textColor="@color/A1"
            android:textSize="17sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/warn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar_layout"
        android:background="@color/colorDivider"
        android:paddingBottom="10dp"
        android:paddingTop="18dp">

        <ImageView
            android:id="@+id/warn_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/warn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@id/warn_iv"
            android:lineSpacingExtra="7dp"
            android:text="         为了交易安全,设置支付密码用户交易确认,支付密码由6至12位数字,字母组成,字母区分大小写."
            android:textColor="@color/A4"
            android:textSize="12sp" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/warn_layout"
        android:background="@color/white">

        <TextView
            android:id="@+id/showPwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="支付密码"
            android:textColor="@color/A3"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/showPwd_tv"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:textColor="@color/A3"
            android:textColorHint="@color/A5"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:background="@color/colorDivider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/checkPwd_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/pwd_layout"
        android:background="@color/white">

        <TextView
            android:id="@+id/showCheckPwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="再次输入"
            android:textColor="@color/A3"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/checkPwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@id/showCheckPwd_tv"
            android:background="@null"
            android:hint="请再次输入"
            android:inputType="numberPassword"
            android:textColor="@color/A3"
            android:textColorHint="@color/A5"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/verify_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/checkPwd_layout"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/shape_btn_a1"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
