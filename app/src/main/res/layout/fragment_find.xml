<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.bb.hbx.fragment.FindFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_find"
            android:textAppearance="@style/TextAppear.Theme.A1_Size17" />


    </android.support.v7.widget.Toolbar>

    <include layout="@layout/line_e" />


    <RadioGroup
        android:id="@+id/rg_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:gravity="center"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/rb_bktj"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/recommend"
            android:textColor="@drawable/find_radio_text"
            android:textSize="14sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/y54"
            android:background="@color/A6" />


        <RadioButton
            android:id="@+id/rb_yxhd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/activit"
            android:textColor="@drawable/find_radio_text"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/y54"
            android:background="@color/A6" />

        <RadioButton
            android:id="@+id/rb_ztlb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="@string/topiclist"
            android:textColor="@drawable/find_radio_text"
            android:textSize="14sp" />


    </RadioGroup>


    <include layout="@layout/line_e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y26"
        android:background="@color/A7">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/tab_content2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

</LinearLayout>
