<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.bb.hbx.widget.banner.BGABanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y385"
        app:banner_indicatorGravity="center_horizontal"
        app:banner_placeholderDrawable="@drawable/holder"
        app:banner_tipTextSize="12sp"
        app:banner_transitionEffect="accordion" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/banner"
        android:background="@drawable/bannerbg" />
</RelativeLayout>

