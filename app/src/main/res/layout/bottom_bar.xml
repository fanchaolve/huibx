<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Z53"
    android:orientation="vertical"
    >


    <include layout="@layout/line_e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="9dp"
                android:src="@drawable/shouye_weixuanzhong" />

            <TextView
                android:id="@+id/tvTab1"
                android:layout_marginBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppear.Theme.A4_Size11"
                android:text="@string/home_home"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab2"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shangcheng_weidianji" />

            <TextView
                android:id="@+id/tvTab2"
                android:layout_marginBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppear.Theme.A4_Size11"
                android:text="@string/home_mall"

                />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/tab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab3"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/faxian_wei_xunazhong" />

            <TextView
                android:id="@+id/tvTab3"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppear.Theme.A4_Size11"
                android:text="@string/home_find"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:src="@drawable/classroom_weixuanzhong" />

            <TextView
                android:id="@+id/tvTab4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:textAppearance="@style/TextAppear.Theme.A4_Size11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_class"
                 />
        </LinearLayout>


       <LinearLayout
           android:id="@+id/tab5"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:clickable="true"
           android:gravity="center"
           android:orientation="vertical">

          <ImageView
              android:id="@+id/ivTab5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="9dp"
              android:src="@drawable/my_weixuanzhong" />

          <TextView
              android:id="@+id/tvTab5"
              android:layout_marginBottom="7dp"
              android:textAppearance="@style/TextAppear.Theme.A4_Size11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/home_mine"
              />
       </LinearLayout>



    </LinearLayout>


</LinearLayout>