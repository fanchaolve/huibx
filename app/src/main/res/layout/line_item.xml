<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y112"
    android:orientation="horizontal"
    android:paddingRight="@dimen/x36">


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x36"
        android:textAppearance="@style/TextAppear.Theme.A3_Size14" />

    <ImageView
        android:id="@+id/iv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <EditText
        android:id="@+id/et_comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x256"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_last"
        android:background="@null"
        android:textAppearance="@style/TextAppear.Theme.A3_Size14"
        android:textColorHint="@color/A4"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x256"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_last"
        android:background="@null"
        android:textAppearance="@style/TextAppear.Theme.A3_Size14"
        android:visibility="gone" />

</RelativeLayout>

