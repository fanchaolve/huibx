<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bb.hbx.activitiy.PerOrderDetailActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="保单详情"
            android:textSize="22sp"
            android:textColor="@color/A1"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_iv"
        android:src="@drawable/fanhui"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:onClick="backMethod"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/scrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorDivider"/>

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_below="@id/toolbar"
                    android:padding="15dp">
                    <TextView
                        android:id="@+id/company_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中国平安"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="驾车人员意外伤害保险"
                        android:textColor="@android:color/black"
                        android:layout_below="@id/company_tv"
                        android:layout_marginTop="10dp"
                        android:id="@+id/title_tv"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number_tv"
                        android:layout_below="@id/title_tv"
                        android:layout_marginTop="10dp"
                        android:text="订单编号:xxxxx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保障中"
                        android:id="@+id/state_tv"
                        android:background="@drawable/identify_shape"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorDivider"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/pay_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付保费"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pay_tv"
                        android:text="1元"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/startTime_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保障开始时间"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startTime_tv"
                        android:text="2016-10-10 00:00:00"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/endTime_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保障结束时间"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endTime_tv"
                        android:text="2017-10-10 00:00:00"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorDivider"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/holder_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投保人"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/name_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_tv"
                        android:text="罗伟"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/idType_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件类型"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/idType_tv"
                        android:text="身份证"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/idNumber_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件号"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/idNumber_tv"
                        android:text="330333333333333333"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/bornTime_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出身日期"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bornTime_tv"
                        android:text="2017-10-10"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/phone_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone_tv"
                        android:text="15700000000"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorDivider"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/insured_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="被保人"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/relationshap_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="与投保人关系"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relationshap_tv"
                        android:text="本人"
                        android:textColor="@color/A4"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorDivider"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/duty_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="责任"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerView"></android.support.v7.widget.RecyclerView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorDivider"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingLeft="18dp"
                    android:id="@+id/check_layout"
                    android:background="@color/colorDivider">
                    <TextView
                        android:id="@+id/check_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看"
                        android:textSize="14sp"
                        android:textColor="@color/A3"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/insureInfo_tv"
                        android:text="@string/insureInfo"
                        android:textColor="@color/A1"
                        android:textSize="13sp"
                        android:layout_toRightOf="@id/check_tv"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/insureItem_tv"
                        android:text="@string/insureItem"
                        android:textColor="@color/A1"
                        android:textSize="13sp"
                        android:layout_toRightOf="@id/insureInfo_tv"
                        android:layout_marginLeft="18dp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDivider"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/call_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/call_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系客服"
                        android:textColor="@color/A3"
                        android:textSize="13sp"
                        android:layout_toRightOf="@id/call_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/order_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/order_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电子保单"
                        android:textColor="@color/A3"
                        android:textSize="13sp"
                        android:layout_toRightOf="@id/order_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/askMoney_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/askMoney_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我要理赔"
                        android:textColor="@color/A3"
                        android:textSize="13sp"
                        android:layout_toRightOf="@id/askMoney_iv"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
