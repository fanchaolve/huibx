<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A7">
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-22 12:54:56"
            android:textColor="@color/A4"
            android:textSize="9sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="18dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/state_iv"
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:src="@drawable/baodan_daichudan"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time_layout"
        android:layout_marginRight="18dp" />
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="驾车人员意外伤害保险"
        android:textColor="@color/A3"
        android:textSize="18sp"
        android:lineSpacingExtra="7dp"
        android:layout_below="@id/time_layout"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="18dp"/>
    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/shangcheng"
        android:scaleType="centerCrop"
        android:layout_below="@id/title_tv"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"/>
    <TextView
        android:id="@+id/orderNumber_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号: 1231123212321542"
        android:textColor="@color/A3"
        android:textSize="12sp"
        android:layout_marginLeft="18dp"
        android:layout_below="@id/logo_iv"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/insured_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="被保人: 罗伟"
        android:textColor="@color/A3"
        android:textSize="12sp"
        android:layout_below="@id/orderNumber_tv"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:id="@+id/holder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投保人: 罗伟"
        android:textColor="@color/A3"
        android:textSize="12sp"
        android:layout_below="@id/insured_tv"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="18dp"/>
    <TextView
        android:id="@+id/timeLimit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保险期间: 2016-12-10至2017-12-09"
        android:textColor="@color/A3"
        android:textSize="12sp"
        android:layout_below="@id/holder_tv"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="18dp"/>
    <TextView
        android:id="@+id/divider_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:layout_below="@id/timeLimit_tv"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/priceShow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保单金额:"
        android:textSize="12sp"
        android:textColor="@color/A4"
        android:layout_below="@id/divider_tv"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="17dp"/>
    <TextView
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4345.00"
        android:textSize="14sp"
        android:textColor="@color/A2"
        android:layout_toRightOf="@id/priceShow_tv"
        android:layout_alignBottom="@id/priceShow_tv"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textSize="12sp"
        android:textColor="@color/A4"
        android:layout_toRightOf="@id/price_tv"
        android:layout_alignBottom="@id/priceShow_tv"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="元"
        android:textSize="12sp"
        android:textColor="@color/A4"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/priceShow_tv"
        android:layout_marginRight="18dp"/>

    <TextView
        android:id="@+id/income_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="670.00"
        android:textSize="14sp"
        android:textColor="@color/A2"
        android:layout_alignBottom="@id/priceShow_tv"
        android:layout_toLeftOf="@id/unit_tv"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/incomeShow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推广费:"
        android:textSize="12sp"
        android:textColor="@color/A4"
        android:layout_alignBottom="@id/priceShow_tv"
        android:layout_toLeftOf="@id/income_tv"
        android:layout_marginRight="10dp" />
</RelativeLayout>