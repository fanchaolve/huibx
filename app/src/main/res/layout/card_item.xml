<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y42"
        android:background="@color/A7"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lin_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:layout_marginTop="@dimen/y26"
            android:background="@drawable/shape_z49"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x36"
                android:drawableLeft="@drawable/baozhang"
                android:drawablePadding="@dimen/x22"
                android:gravity="center_vertical"
                android:text="@string/protection_list"
                android:textAppearance="@style/TextAppear.Theme.Z48_Size16" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lin_1"
            android:scaleType="fitXY"
            android:src="@drawable/touyin" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y204"
        android:layout_marginTop="@dimen/y42"
        android:background="@color/A7">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/lin_card1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y156"
                android:layout_weight="1"
                android:background="@drawable/shape_z49"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/lin_item1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@color/A1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textAppearance="@style/TextAppear.Theme.Z48_Size24" />

                    <TextView
                        android:id="@+id/tv_other1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥起"
                        android:textAppearance="@style/TextAppear.Theme.Z48_Size12" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_detail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y35"
                    android:text="10万保额"
                    android:textAppearance="@style/TextAppear.Theme.Z48_Size12" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_card2"
                android:layout_width="0dp"
                android:layout_height="@dimen/y156"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/shape_z49"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/lin_item2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@color/A1" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textAppearance="@style/TextAppear.Theme.Z48_Size24" />

                    <TextView
                        android:id="@+id/tv_other2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥起"
                        android:textAppearance="@style/TextAppear.Theme.Z48_Size12" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_detail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y35"
                    android:text="10万保额"
                    android:textAppearance="@style/TextAppear.Theme.Z48_Size12" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_card3"
                android:layout_width="0dp"
                android:layout_height="@dimen/y156"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/shape_z49"
                android:gravity="center_horizontal|bottom"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/lin_item3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@color/A1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textAppearance="@style/TextAppear.Theme.Z48_Size24" />

                    <TextView
                        android:id="@+id/tv_other3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥起"
                        android:textAppearance="@style/TextAppear.Theme.Z48_Size12" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_detail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y35"
                    android:text="10万保额"
                    android:textAppearance="@style/TextAppear.Theme.Z48_Size12" />


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lin"
            android:scaleType="fitXY"
            android:src="@drawable/touyin" />


    </RelativeLayout>


</LinearLayout>
