<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_assert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bb.hbx.activitiy.MyAssertActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的资产"
            android:textSize="20sp"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_iv"
        android:src="@mipmap/right_arrow"
        android:layout_margin="10dp"
        android:onClick="backMethod"/>
    <RelativeLayout
        android:id="@+id/makeMoney_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/toolbar">
        <TextView
            android:id="@+id/income_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月暂无收入"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去赚钱"
            android:background="@drawable/identify_shape"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/income_tv"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/money_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/makeMoney_layout"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/cash_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="onClick">
            <TextView
                android:id="@+id/cashShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_shape"
                android:padding="5dp"
                android:text="可提现"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/cash_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cashShow_tv"
                android:layout_marginTop="10dp"
                android:text="0.00"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:id="@+id/settlement_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="onClick">
            <TextView
                android:id="@+id/settlementShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_shape"
                android:padding="5dp"
                android:text="结算中"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/settlement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/settlementShow_tv"
                android:layout_marginTop="10dp"
                android:text="0.00"/>
        </RelativeLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:id="@+id/allIncome_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="onClick">
            <TextView
                android:id="@+id/allIncomeShow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_shape"
                android:padding="5dp"
                android:text="累计收入"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/allIncome_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/allIncomeShow_tv"
                android:layout_marginTop="10dp"
                android:text="0.00"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/divider_tv"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/money_layout"/>
    <TextView
        android:id="@+id/graphTitle_tv"
        android:layout_below="@id/divider_tv"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近六个月收入走势"/>
    <com.bb.hbx.widget.IncomesTableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tableType="income"
        style="@style/incomeview_style"
        android:id="@+id/income_itv"
        android:layout_margin="10dp"
        android:layout_below="@id/graphTitle_tv"/>
</RelativeLayout>
