<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bb.hbx.activitiy.SexActivity">

    <RelativeLayout
        android:id="@+id/topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_iv"
            android:src="@drawable/fanhui"
            android:scaleType="centerCrop"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料设置"
            android:textSize="22sp"
            android:textColor="@color/A1"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/divider_tv"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/colorDivider"
        android:layout_below="@id/topbar_layout"/>
    <RelativeLayout
        android:id="@+id/boy_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="18dp"
        android:layout_below="@id/divider_tv"
        android:background="@drawable/item_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="14sp"
            android:textColor="@color/A3"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/boy_iv"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:src="@drawable/check"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/girl_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="18dp"
        android:layout_below="@id/boy_layout"
        android:background="@drawable/item_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="14sp"
            android:textColor="@color/A3"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/girl_iv"
            android:layout_width="15dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
