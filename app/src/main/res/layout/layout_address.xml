<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@id/divider_tv"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/colorDivider"
        android:layout_below="@id/topbar_layout"/>
    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_below="@id/divider_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罗伟"
            android:textSize="14sp"
            android:textColor="@color/A3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_tv"
            android:text="15200005679"
            android:textColor="@color/A3"
            android:textSize="13sp"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginTop="18dp"
            android:text="浙江省杭州市西湖区学院路"
            android:textSize="13sp"
            android:textColor="@color/A3"
            android:lineSpacingExtra="8dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/divider2_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/address_layout"
        android:background="@color/colorDivider"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_below="@id/divider2_tv">
        <RelativeLayout
            android:id="@+id/select_layout"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/select_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/item_address_select" />
        </RelativeLayout>

        <TextView
            android:id="@+id/select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textColor="@color/A2"
            android:textSize="14sp"
            android:layout_toRightOf="@id/select_layout"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/delete"
                android:scaleType="centerCrop"
                android:layout_marginRight="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="@color/A4"
                android:textSize="13sp"
                android:layout_marginLeft="23dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/delete_layout"
            android:layout_marginRight="24dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/edit"
                android:scaleType="centerCrop"
                android:layout_marginRight="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="@color/A4"
                android:textSize="13sp"
                android:layout_marginLeft="23dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>